<% layout("/layouts/boilerplate") %>
    

    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }
      .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: .8;
      }
      .filter:hover{
        opacity: 1;
        cursor: pointer;
      }

      .filter.active{
        opacity: 1;
        border-bottom: 2px solid #fe424d;
        color: #fe424d;
      }

      .filter p{
        font-size: .8rem;
      }

      .tax-info{
        display: none;
      }

      .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        text-align: center;
        height: 3.5rem;
        padding: 1rem;
        margin-left:4.2rem;
        display: flex;
        align-items: center;
      }

      .price-section {
        margin-top: 5px;
      }

      .tax-btn {
        font-size: 0.75rem;
        padding: 2px 8px;
        transition: all 0.3s ease;
      }

      .tax-btn:hover {
        transform: translateY(-1px);
      }

      .tax-breakdown-card {
        animation: slideDown 0.3s ease-out;
        max-width: 200px;
      }

      @keyframes slideDown {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .listing-card {
        position: relative;
        overflow: visible;
      }
    </style>

    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>

      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
           <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
           <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
        </div>
      </div>
    </div>

    
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 mt-3">
      <!-- card -->
      <% for(let listing of allListings) { %>
        <div class="card  listing-card col " >
          <a href="/listings/<%-listing._id  %>" class="listinglink">
            <img src="<%- listing.image.url %>" style="height:17rem"  class="card-img-top" alt="Image not available">
            <div class="card-img-overlay"></div>
            <div class="card-body">
            <p class="card-text">
                <b><%= listing.title %></b> <br>
                <!-- <%= listing.description %> <br> -->
                <% if (typeof listing.price === 'number') { %>
                  <div class="price-section">
                    <span class="original-price">&#8377; <%= listing.price.toLocaleString("en-IN") %>/night</span>
                    <i class="tax-info">+18% GST</i>
                    <br>
                    <div class="tax-breakdown-card tax-breakdown-global" style="display: none;">
                      <div class="small mt-2 p-2 border rounded bg-light">
                        <div class="d-flex justify-content-between">
                          <span>Original:</span>
                          <span>&#8377; <%= listing.price.toLocaleString("en-IN") %></span>
                        </div>
                        <div class="d-flex justify-content-between">
                          <span>Tax (18%):</span>
                          <span>&#8377; <%= Math.round(listing.price * 0.18).toLocaleString("en-IN") %></span>
                        </div>
                        <hr class="my-1">
                        <div class="d-flex justify-content-between fw-bold">
                          <span>Total:</span>
                          <span>&#8377; <%= Math.round(listing.price * 1.18).toLocaleString("en-IN") %></span>
                        </div>
                      </div>
                    </div>
                  </div>
                <% } else { %>
                  <i>Price not available</i><br>
                <% } %>
                <!-- <%= listing.location %> <br>
                <%= listing.country %> <br> -->
            </p>
          </div>
          </a>
        </div>
        <% } %>
    </div>
    </ul>

    <script src="/javascript/script.js"></script>
    
    <script>
    // Global tax toggle functionality
    document.getElementById('flexSwitchCheckDefault').addEventListener('change', function() {
      const taxBreakdowns = document.querySelectorAll('.tax-breakdown-global');
      const isChecked = this.checked;
      
      taxBreakdowns.forEach(breakdown => {
        if (isChecked) {
          breakdown.style.display = 'block';
        } else {
          breakdown.style.display = 'none';
        }
      });
    });
    </script>
